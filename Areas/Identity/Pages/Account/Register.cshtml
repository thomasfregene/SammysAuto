@page
@model RegisterModel
@using SammysAuto.Utility
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Input.FirstName" class="custom-label"></label>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <input asp-for="Input.FirstName" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            @*LastName*@
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Input.LastName" class="custom-label"></label>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <input asp-for="Input.LastName" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            @*Email*@
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Input.Email" class="custom-label"></label>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <input asp-for="Input.Email" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            @*PhoneNumber*@
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Input.PhoneNumber" class="custom-label"></label>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            @*Address*@
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Input.Address" class="custom-label"></label>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <input asp-for="Input.Address" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            @*City*@
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Input.City" class="custom-label"></label>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <input asp-for="Input.City" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            @*Postal Code*@
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Input.PostalCode" class="custom-label"></label>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <input asp-for="Input.PostalCode" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            @*Password*@
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Input.Password" class="custom-label"></label>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <input asp-for="Input.Password" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            @*ConfirmPassWord*@
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Input.ConfirmPassword" class="custom-label"></label>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @*IsAdmin*@
            @if (User.IsInRole(SD.AdminEndUser))
            @*{
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Input.IsAdmin" class="custom-label"></label>
                        </div>
                        <div class="col-sm-2"></div>
                        <div class="col-sm-8">
                            <input asp-for="Input.IsAdmin" type="checkbox" />
                        </div>
                    </div>
                </div>
            }*@

            @*Button*@
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-8">
                        @*@if (User.IsInRole(SD.AdminEndUser))
                        {
                            <button type="submit" class="btn btn-primary form-control">Add Customer</button>
                        }
                        else
                        {

                        }*@
                        <button type="submit" class="btn btn-primary form-control">Register</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Use another service to register.</h4>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
